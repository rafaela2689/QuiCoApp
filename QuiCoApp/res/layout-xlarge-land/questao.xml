<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".QuestaoActivity" >

     <ImageView 
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gramado"
        android:layout_gravity="bottom"/>
     
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placa_pergunta"
        android:orientation="vertical" 
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtQuestao"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:textColor="#FFFFFF" 
            android:textSize="22sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btnOpcao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/state_bt_questao"
                android:textColor="#FFFFFF" 
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btnOpcao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/state_bt_questao"
                android:textColor="#FFFFFF" 
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btnOpcao3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/state_bt_questao"
                android:textColor="#FFFFFF" 
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btnOpcao4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/state_bt_questao"
                android:textColor="#FFFFFF" 
                android:textSize="22sp"/>
            
        </LinearLayout>

        <TextView
            android:id="@+id/txtContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="#0A0A18" 
            android:textSize="22sp"/>

    </LinearLayout>

</FrameLayout>