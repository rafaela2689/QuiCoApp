<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg">

     <ImageView
       android:id="@+id/imgInstrucoes"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="120dp"
       android:src="@drawable/instrucoes" />

     <ImageView
       android:id="@+id/imgBackground1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/imgInstrucoes"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="215dp"
       android:src="@drawable/bt_instrucoes2" />
     
    <ImageView
        android:id="@+id/imgBackground2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgBackground1"
        android:layout_below="@+id/imgBackground1"
        android:layout_marginTop="17dp"
        android:src="@drawable/bt_instrucoes2" />
    
    <ImageView
        android:id="@+id/imgBackground3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgBackground2"
        android:layout_below="@+id/imgBackground2"
        android:layout_marginTop="16dp"
        android:src="@drawable/bt_instrucoes2" />

    <ImageView
        android:id="@+id/imgNum1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBackground1"
        android:layout_alignLeft="@+id/imgBackground1"
        android:layout_alignRight="@+id/imgBackground1"
        android:layout_alignTop="@+id/imgBackground1"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/num_1" />

    <ImageView
        android:id="@+id/imgNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBackground2"
        android:layout_alignLeft="@+id/imgBackground2"
        android:layout_alignRight="@+id/imgBackground2"
        android:layout_alignTop="@+id/imgBackground2"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/num_2" />

    <ImageView
        android:id="@+id/imgNum3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgBackground3"
        android:layout_alignLeft="@+id/imgBackground3"
        android:layout_alignRight="@+id/imgBackground3"
        android:layout_alignTop="@+id/imgBackground3"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/num_3" />

   <TextView
       android:id="@+id/txtAjuda1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/imgBackground1"
       android:layout_marginLeft="36dp"
       android:layout_toRightOf="@+id/imgBackground1"
       android:layout_marginTop="25dp"
       android:shadowColor="#000000"
       android:shadowRadius="0.85"
       android:text="@string/tv_ajuda1"
       android:textColor="#FFFFFF"
       android:textSize="35sp" />

   <TextView
       android:id="@+id/txtAjuda3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/txtAjuda2"
       android:layout_alignTop="@+id/imgBackground3"
       android:layout_marginTop="22dp"
       android:shadowColor="#000000"
       android:shadowRadius="0.85"
       android:text="@string/tv_ajuda3"
       android:textColor="#FFFFFF"
       android:textSize="35sp" />

   <TextView
       android:id="@+id/txtAjuda2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/imgBackground2"
       android:layout_alignLeft="@+id/txtAjuda1"
       android:shadowColor="#000000"
       android:shadowRadius="0.85"
       android:text="@string/tv_ajuda2"
       android:textColor="#FFFFFF"
       android:textSize="35sp" />

</RelativeLayout>
