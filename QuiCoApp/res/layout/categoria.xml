<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_port"
    tools:context=".CategoriaActivity" 
    android:splitMotionEvents="false">

    <ImageButton
        android:id="@+id/imgbtnCidadeSede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgbtnJogador"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/state_bt_categoria_curiosidades_port"/>

    <ImageView
        android:id="@+id/imgCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/categorias" />

    <ImageButton
        android:id="@+id/imgbtnSelecao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgbtnJogador"
        android:layout_alignLeft="@+id/imgbtnJogador"
        android:layout_marginBottom="18dp"
        android:background="@drawable/state_bt_categoria_selecoes_port"/>

    <ImageButton
        android:id="@+id/imgbtnJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgbtnCidadeSede"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/state_bt_categoria_jogadores_port"/>

</RelativeLayout>
