<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:orientation="vertical" 
    android:background="@drawable/placa_fimdejogo"
    android:layout_gravity="center_horizontal">

    <LinearLayout
       android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:orientation="vertical" 
        android:splitMotionEvents="false">

        
        <Button
            android:id="@+id/btnJogarNovamente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_state_perdeu_repetir" />

        <Button
            android:id="@+id/btnTelaCategoria2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/state_bt_ganhou_categoria" />
        
        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/state_bt_ganhou_niveis" />
        

    </LinearLayout>
    

</RelativeLayout>
