<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="270dp"
    android:background="@drawable/placa_parabens"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" 
        android:splitMotionEvents="false">

        <Button
            android:id="@+id/btnProximoNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/state_bt_ganhou_proximo" />

        <Button
            android:id="@+id/btnTelaCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/state_bt_ganhou_categoria" />

        <Button
            android:id="@+id/btnNiveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/state_bt_ganhou_niveis" />
    </LinearLayout>

</RelativeLayout>