<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".QuestaoActivity" >
    
    <ImageView 
       
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gramado"
        android:layout_gravity="bottom"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placa_pergunta"
        android:orientation="vertical"
        android:layout_gravity="center">
      
        <TextView
            android:id="@+id/txtQuestao"
            android:layout_width="405dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:textColor="#FFFFFF" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="15dp"
            android:splitMotionEvents="false">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:gravity="center">

                <Button
                    android:id="@+id/btnOpcao1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_bt_questao"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOpcao2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_bt_questao"
                    android:textColor="#FFFFFF" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" 
                android:layout_marginBottom="5dp">

                <Button
                    android:id="@+id/btnOpcao3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_bt_questao"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOpcao4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_bt_questao"
                    android:textColor="#FFFFFF" />

            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/txtContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:textColor="#0A0A18" />

    </LinearLayout>

</FrameLayout>