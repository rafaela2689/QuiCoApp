<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".QuestaoActivity" >

    <ImageView
        android:id="@+id/imgGramado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginTop="200dp"
        android:src="@drawable/gramado" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/placa_pergunta" >

        <TextView
            android:id="@+id/txtQuestao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtContador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnOpcao1"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="44dp" />

            <Button
                android:id="@+id/btnOpcao2"
                android:layout_width="102dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:layout_marginTop="19dp" >

            <Button
                android:id="@+id/btnOpcao3"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="58dp"
                android:layout_marginLeft="53dp" />

            <Button
                android:id="@+id/btnOpcao4"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>